<?xml version="1.0"?>
<package>
  <metadata>
    <id>Maxfire.CakeScripts</id>
    <version>0.0.0</version>
    <authors>maxfire</authors>
    <owners>maxfire</owners>
    <description>Re-usable build scripts for Cake that I use on a number of projects.</description>
    <tags>Build Cake</tags>
  </metadata>
  <files>
    <!-- target can be either 'content' or 'tools' ('lib' does not make sense) -->
    <file src="*.cake" target="content" />
    <!--
        version.txt will tell bootstrapper scripts (build.sh and build.ps1),
        if another version should be downbloaded
    -->
    <file src="version.txt" target="content" />
  </files>
</package>
